<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:KickbackKingdomLauncher.Converters"
             xmlns:vm="clr-namespace:KickbackKingdomLauncher.ViewModels.Pages"
             xmlns:pages="clr-namespace:KickbackKingdomLauncher.ViewModels.Pages;assembly=KickbackKingdomLauncher"
             xmlns:views="clr-namespace:KickbackKingdomLauncher.Views.Pages"
			 xmlns:software="clr-namespace:KickbackKingdomLauncher.ViewModels.Software;assembly=KickbackKingdomLauncher"
             x:Class="KickbackKingdomLauncher.App">




	<Application.Resources>
		<ResourceDictionary>
			<!-- Include external template file -->

			<!-- Colors -->
			<Color x:Key="PrimaryColor">#7851a9</Color>
			<Color x:Key="SecondaryColor">#FFD218</Color>
			<Color x:Key="TertiaryColor">#66023c</Color>
			<Color x:Key="DarkBackground">#1a1a2e</Color>
			<Color x:Key="PanelBackground">#2d3046</Color>
			<Color x:Key="AccentText">#fefefe</Color>
			<Color x:Key="MutedText">#aaaaaa</Color>
			<Color x:Key="BorderColor">#5c5f78</Color>

			<!-- Converters -->
			<converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
			<converters:NotNullConverter x:Key="NotNullConverter"/>

		</ResourceDictionary>

	</Application.Resources>

	<Application.Styles>
		<FluentTheme />

		<Style Selector="Button">
			<Setter Property="Background" Value="{DynamicResource PrimaryColor}" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="FontWeight" Value="SemiBold" />
			<Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
			<Setter Property="CornerRadius" Value="6" />
			<Setter Property="Margin" Value="6" />
			<Setter Property="Padding" Value="12,6" />
			<Setter Property="FontSize" Value="14" />
		</Style>
	</Application.Styles>
	<Application.DataTemplates>


		<!-- Group Header -->
		<DataTemplate DataType="software:SoftwareGroupHeader">
			<Border IsHitTestVisible="False" Focusable="False" Background="Transparent" Margin="0,8,0,4">
				<TextBlock Text="{Binding Title}"
						   FontSize="12"
						   FontWeight="Bold"
						   Foreground="#aaaaaa"
						   Margin="4,4,0,0"/>
			</Border>
		</DataTemplate>

		<!-- Item Entry -->
		<DataTemplate DataType="software:SoftwareItemEntry">
			<TextBlock Text="{Binding Software.Title}"
					   Padding="8,4"
					   Foreground="White"/>
		</DataTemplate>

		<!-- Page ViewModels -->
		<DataTemplate DataType="pages:GamePageViewModel">
			<views:GamePageView />
		</DataTemplate>

		<DataTemplate DataType="pages:GroupSoftwarePageViewModel">
			<views:GroupSoftwarePageView />
		</DataTemplate>

		<DataTemplate DataType="pages:TaskPageViewModel">
			<views:TaskViewerView />
		</DataTemplate>

		<DataTemplate DataType="pages:StorePageViewModel">
			<views:StorePageView />
		</DataTemplate>
	</Application.DataTemplates>



</Application>
