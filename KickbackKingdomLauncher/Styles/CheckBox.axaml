<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- CheckBox -->
	<Style Selector="CheckBox">
		<Setter Property="Template">
			<ControlTemplate TargetType="CheckBox">
				<StackPanel Orientation="Horizontal" Spacing="8">
					<Border Name="Box"
							Width="16"
							Height="16"
							Background="{TemplateBinding Background}"
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="1">
						<Canvas>
							<Path Name="Check"
								  IsVisible="False"
								  Stroke="{TemplateBinding Foreground}"
								  StrokeThickness="2"
								  Data="M2,6 L6,10 L14,2" />
						</Canvas>
					</Border>
					<ContentPresenter Content="{TemplateBinding Content}"
									  Foreground="{TemplateBinding Foreground}"
									  VerticalAlignment="Center" />
				</StackPanel>
			</ControlTemplate>
		</Setter>

		<!-- Default appearance -->
		<Setter Property="Foreground" Value="{DynamicResource AccentTextBrush}" />
		<Setter Property="FontSize" Value="13" />
		<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
		<Setter Property="Background" Value="Transparent" />
	</Style>

	<!-- Checkmark visible when checked -->
	<Style Selector="CheckBox:checked /template/ #Check"
		   x:SetterTargetType="Path">
		<Setter Property="IsVisible" Value="True" />
	</Style>

	<!-- Hover border highlight -->
	<Style Selector="CheckBox:pointerover /template/ #Box"
		   x:SetterTargetType="Border">
		<Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}" />
	</Style>

	<!-- Focus border highlight (for keyboard nav) -->
	<Style Selector="CheckBox:focus-within /template/ #Box"
		   x:SetterTargetType="Border">
		<Setter Property="BorderBrush" Value="{DynamicResource SecondaryBrush}" />
	</Style>

	<!-- Checked fill -->
	<Style Selector="CheckBox:checked /template/ #Box"
		   x:SetterTargetType="Border">
		<Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
	</Style>

</Styles>
