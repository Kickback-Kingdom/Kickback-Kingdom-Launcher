<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KickbackKingdomLauncher.ViewModels.Windows"
    xmlns:controls="clr-namespace:KickbackKingdomLauncher.Views.Controls"
    x:Class="KickbackKingdomLauncher.Views.Windows.LoginWindow"
    x:DataType="vm:LoginViewModel"
    Title="Kickback Kingdom - Login"
    Width="680" Height="400"
    CanResize="False">

	<Grid RowDefinitions="Auto,*">
		<!-- Title Bar -->
		<controls:TitleBar />

		<!-- Main Content -->
		<Grid Grid.Row="1" ColumnDefinitions="*,Auto,*">
			<Border Grid.Column="1"
                    Width="600"
                    Padding="0"
                    VerticalAlignment="Top"
                    Margin="0,24,0,0">

				<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="10">

					<!-- Logo -->
					<Image Source="/Assets/logo-kk.png"
                           Height="40"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,8"
                           Grid.Row="0" />

					<!-- Email Label -->
					<TextBlock Text="SIGN IN WITH EMAIL"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="White"
                               Grid.Row="1" />

					<!-- Email Input -->
					<TextBox Text="{Binding Email}" x:Name="emailBox"
                             Grid.Row="2" />

					<!-- Password Label -->
					<TextBlock Text="PASSWORD"
                               FontWeight="Bold"
                               FontSize="13"
                               Foreground="White"
                               Grid.Row="3" />

					<!-- Password Input -->
					<TextBox Text="{Binding Password}"
                             PasswordChar="â€¢"
                             Grid.Row="4" />

					<!-- Remember Me -->
					<CheckBox Content="Remember me"
                              Foreground="White"
                              Grid.Row="5" />

					<!-- Error Message -->
					<TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="12"
                               Grid.Row="6" />

					<!-- Sign In Button -->
					<Button Content="Sign in"
                            Command="{Binding LoginCommand}"
                            Width="180"
                            Height="36"
                            HorizontalAlignment="Center"
                            Grid.Row="7" />

					<!-- Bottom Links -->
					<Grid Grid.Row="8" ColumnDefinitions="*,*">
						<TextBlock Grid.Column="0"
                                   FontSize="12"
                                   Foreground="LightGray">
							<Run Text="Help? " />
							<TextBlock Text="I can't sign in"
                                       Classes="link"
                                       PointerPressed="OnForgotPasswordLinkClicked" />
						</TextBlock>

						<TextBlock Grid.Column="1"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   Foreground="LightGray">
							<Run Text="No account? " />
							<TextBlock Text="Register"
                                       Classes="link"
                                       PointerPressed="OnRegisterLinkClicked" />
						</TextBlock>
					</Grid>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Window>
