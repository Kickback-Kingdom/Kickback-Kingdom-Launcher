<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KickbackKingdomLauncher.ViewModels.Windows"
    xmlns:controls="clr-namespace:KickbackKingdomLauncher.Views.Controls"
    x:Class="KickbackKingdomLauncher.Views.Windows.InstallerWindow"
    x:DataType="vm:InstallerViewModel"
    Title="Install Game"
    Width="500" Height="360"
    WindowStartupLocation="CenterOwner"
    CanResize="False">

	<Grid RowDefinitions="Auto,*">
		<!-- Title Bar -->
		<controls:TitleBar />

		<StackPanel Grid.Row="1" Margin="20" Spacing="10">
		<TextBlock Text="Install Location" FontWeight="Bold"/>

		<StackPanel>
			<ComboBox
    ItemsSource="{Binding Vaults}"
    SelectedItem="{Binding SelectedVault}"
    MinWidth="250">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Spacing="2">
							<TextBlock Text="{Binding Name}" FontWeight="Bold"/>
							<TextBlock Text="{Binding Path}" FontStyle="Italic" FontSize="11"/>
						</StackPanel>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>



			<TextBlock Text="{Binding InstallPath}" FontStyle="Italic" Margin="0,5,0,0" />
		</StackPanel>


		<TextBlock Text="Drive Information" FontWeight="Bold" Margin="0,10,0,0"/>

		<StackPanel>
			<TextBlock Text="{Binding TotalSpaceFormatted}" />
			<TextBlock Text="{Binding FreeSpaceFormatted}" />
			<TextBlock Text="{Binding SpaceRequiredFormatted}" />
			<TextBlock Text="{Binding SpaceLeftAfterInstallFormatted}" />
		</StackPanel>

		<!-- Optional warning -->
		<TextBlock Text="âš  Not enough free space!"
                   Foreground="OrangeRed"
                   FontWeight="Bold"
                   IsVisible="{Binding HasEnoughSpace, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
			<Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
			<Button Content="Install"
        Command="{Binding InstallCommand}"
        Width="100"
        IsEnabled="{Binding CanInstall}" />

		</StackPanel>
	</StackPanel>
		</Grid>
</Window>
