<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KickbackKingdomLauncher.ViewModels.Windows"
    xmlns:controls="clr-namespace:KickbackKingdomLauncher.Views.Controls"
    x:Class="KickbackKingdomLauncher.Views.Windows.ManifestBuilderWindow"
    x:DataType="vm:ManifestBuilderViewModel"
    Title="Manifest Builder"
    Width="600" Height="460"
    WindowStartupLocation="CenterOwner"
    CanResize="False">

	<Grid RowDefinitions="Auto,*">
		<!-- Reuse TitleBar from your control library -->
		<controls:TitleBar />

		<StackPanel Grid.Row="1" Margin="20" Spacing="10">
			<TextBlock Text="Build a manifest file from a local folder to upload to the server." />
			
			<Button Content="Browse Folder" Click="BrowseFolder_Click" />

			<TextBlock Text="{Binding SelectedFolder}" FontStyle="Italic" />

			<TextBox Watermark="Software ID" Text="{Binding SoftwareId}" />
			<TextBox Watermark="Version" Text="{Binding Version}" />

			<Button Content="Generate Manifest" Command="{Binding GenerateManifestCommand}" />

			<TextBlock Text="{Binding OutputPath}" FontStyle="Italic" Foreground="Gray" />

			<TextBlock Text="{Binding StatusMessage}" Foreground="Green" FontWeight="Bold" />
		</StackPanel>
	</Grid>
</Window>
