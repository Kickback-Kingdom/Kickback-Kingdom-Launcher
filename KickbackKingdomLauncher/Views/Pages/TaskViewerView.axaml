<UserControl
    x:Class="KickbackKingdomLauncher.Views.Pages.TaskViewerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KickbackKingdomLauncher.ViewModels.Pages"
    xmlns:models="clr-namespace:KickbackKingdomLauncher.Models.Tasks"
    x:DataType="vm:TaskPageViewModel">

	<ScrollViewer>
		<StackPanel Margin="12" Spacing="8">
			<ItemsControl ItemsSource="{Binding ActiveTasks}">
				<ItemsControl.ItemTemplate>
					<DataTemplate x:DataType="models:TaskProgress">
						<StackPanel>
							<TextBlock Text="{Binding TaskName}" Foreground="White"/>
							<TextBlock Text="{Binding StatusMessage}" Foreground="Gray"/>
							<ProgressBar Value="{Binding Progress}" Height="8"/>
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</ScrollViewer>
</UserControl>
